<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout"
    tools:context="com.anshi.lazyshopmall.view.activity.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/lazy_shop_color_main"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                >
                <include android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    layout="@layout/main_toolbar_layout"
                    android:id="@+id/main_toolbar_layout"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/lightlightgrey"
                android:id="@+id/goods_category_layout"
                android:layout_marginTop="@dimen/dimen_10_dip"
                >
                <include android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/main_category"
                    layout="@layout/main_goods_category_layout"
                    />
            </LinearLayout>
        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout
                android:layout_width="match_parent"
                android:id="@+id/main_refresh"
                android:layout_height="match_parent">
                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/personal_frag_recycler"
                    />
            </com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:layout_gravity="bottom|end"
                android:id="@+id/main_expand_layout"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:button="@null"
                    android:id="@+id/main_expand_arrow"
                    android:src="@drawable/back_sting"
                    android:scaleType="center"
                    android:contentDescription="@null"
                    android:gravity="center"
                    android:background="@drawable/main_tab_suspend_two"
                    android:textColor="@color/white"
                    android:layout_marginBottom="10dp"
                    />
            </LinearLayout>
            <RadioGroup
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:visibility="gone"
                android:id="@+id/main_tab_group"
                android:orientation="horizontal"
                android:background="@drawable/main_tab_suspend"
                android:layout_gravity="bottom|end"
                android:layout_marginBottom="10dp"
                >
                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:id="@+id/main_reduce_rb"
                    android:drawableTop="@drawable/pg_reduce"
                    android:paddingTop="5dp"
                    android:text="缩放"
                    android:textColor="@color/white"
                    android:gravity="center"
                    />
                <View
                    android:layout_width="0.8dp"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    />
                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableTop="@drawable/pg_main_my"
                    android:text="我的"
                    android:paddingTop="5dp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:background="@drawable/common_tab_bg"
                    />
                <View
                    android:layout_width="0.8dp"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    />
                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableTop="@drawable/pg_main_buy_car"
                    android:paddingTop="5dp"
                    android:text="购物车"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:background="@drawable/common_tab_bg"
                    />
                <View
                    android:layout_width="0.8dp"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    />
                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableTop="@drawable/pg_main_message"
                    android:paddingTop="5dp"
                    android:text="消息"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:background="@drawable/common_tab_bg"
                    />
            </RadioGroup>
        </FrameLayout>
</LinearLayout>
<FrameLayout
    android:layout_width="@dimen/dimen_300_dip"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:id="@+id/main_frame_layout"
    android:background="@color/white"
    />

</android.support.v4.widget.DrawerLayout>
