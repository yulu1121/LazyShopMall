<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <include android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/common_toolbar_layout"
        layout="@layout/common_toolbar"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/welcome_layout"
            >
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.45"
                />
          <LinearLayout
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_weight="1"
              >
              <com.anshi.lazyshopmall.self_view.EaseImageView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/welcome_man"
                  app:ease_shape_type="rectangle"
                  app:ease_radius="@dimen/dimen_10_dip"
                  android:src="@drawable/pg_welcome_man"
                  />
              <RadioButton
                  android:layout_width="100dp"
                  android:layout_height="wrap_content"
                  android:text="男"
                  android:id="@+id/man_rb"
                  android:layout_marginTop="@dimen/dimen_10_dip"
                  android:button="@null"
                  android:drawableStart="@drawable/welcome_man_rb_selector"
                  android:layout_marginStart="@dimen/dimen_30_dip"
                  />

          </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                >
                <com.anshi.lazyshopmall.self_view.EaseImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/welcome_woman"
                    app:ease_shape_type="rectangle"
                    app:ease_radius="@dimen/dimen_10_dip"
                    android:src="@drawable/pg_welcome_woman"
                    />
                <RadioButton
                    android:layout_marginTop="@dimen/dimen_10_dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="女"
                    android:id="@+id/woman_rb"
                    android:drawableStart="@drawable/welcome_woman_rb_selector"
                    android:button="@null"
                    android:layout_marginStart="@dimen/dimen_30_dip"
                    />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>